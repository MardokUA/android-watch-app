<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.settings.step.SetTimerVibrationFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_vibrate"
                android:contentDescription="TODO"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white_active"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="@string/screen_title_vibration"
                android:layout_marginLeft="5dp"
        />
    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <android.support.wear.widget.WearableRecyclerView
                android:id="@+id/wrvVibrations"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:scrollbars="vertical"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingTop="75dp"
                android:paddingBottom="75dp"
        />
    </FrameLayout>
</LinearLayout>
