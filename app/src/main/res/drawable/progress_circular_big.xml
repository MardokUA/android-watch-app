<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-135"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="-135">
    <layer-list>
        <item>
            <shape android:shape="oval">
                <stroke
                    android:width="4dp"
                    android:color="@color/white_inactive" />
            </shape>
        </item>
        <item>
            <shape
                android:innerRadiusRatio="2.115"
                android:shape="ring"
                android:thickness="4dp"
                android:useLevel="true">
                <solid android:color="@color/white_active" />
            </shape>
        </item>
    </layer-list>
</rotate>
