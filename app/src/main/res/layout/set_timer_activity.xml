<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.igorganapolsky.vibratingwatchapp.ui.timersettings.SetTimerActivity"
    android:orientation="vertical">

    <fragment
        android:id="@+id/timerTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.igorganapolsky.vibratingwatchapp.ui.timersettings.TimerTimeFragment"
        tools:layout="@layout/timer_time_fragment"/>

    <com.igorganapolsky.vibratingwatchapp.ui.timersettings.custom.SwipeRestrictViewPager
        android:id="@+id/vpWizard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/timerTime"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tlDots"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:clickable="false"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabRippleColor="@null"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingStart="5dp"
        app:tabPaddingEnd="5dp"/>

    <FrameLayout
        android:id="@+id/ivNextPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_next"/>

    </FrameLayout>
</RelativeLayout>
